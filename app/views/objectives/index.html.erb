<h1>Overview</h1>

<%= link_to "New Objective", new_objective_path, role: 'button', class: 'btn btn-primary pull-right', 'data-toggle' => 'modal', 'data-target' => '#modal-form' %>

<ul id='objectives' data-update-url='<%= sort_objectives_url %>'>
  <%= render @objectives %>
</ul>

<div id='hire-dates'>
  <% @people.group_by { |person| person.hire_date }.each do |hire_date, people| %>
    <div class='row'>
      <div class='span2'>
        <h3><%= hire_date %></h3>
      </div>

      <div class='span10'>
        <ul class='unstyled'>
          <% people.each do |person| %>
            <li>
              <%= person.name %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>